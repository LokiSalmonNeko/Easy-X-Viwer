{
  "name": "easy-x-viewer",
  "version": "1.0.0",
  "description": "輕量級 X (Twitter) 貼文影片管理 Web 應用",
  "main": "server.js",
  "scripts": {
    "build:css": "tailwindcss -i ./src/input.css -o ./public/css/tailwind.css --minify",
    "setup": "bash setup.sh || setup.bat",
    "setup:twscrape": "pip3 install twscrape || pip install twscrape",
    "start": "node server.js",
    "dev": "node server.js",
    "prestart": "npm run build:css"
  },
  "keywords": [
    "twitter",
    "x",
    "video",
    "manager"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "child_process": "^1.0.2"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "twscrape": {
    "note": "需要安裝 Python 3.8+ 和 twscrape: pip install twscrape"
  }
}

